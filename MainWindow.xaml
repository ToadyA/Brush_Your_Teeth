<Window x:Class="Brush_Teeth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Brush_Teeth"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid Background="LightGray">
        <Calendar Name="BrushCalendar" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" />
        <TextBlock Name="Today" Text ="A fine day" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,490,0,0" FontSize="16" Width="232" />

        <Button Name="BrushMornButton" Content="Did you brush your teeth this morning?" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,45,578,0" Click="BrushMornButton_Click" />
        <Button Name="WashButton" Content="Did you use mouthwash today?" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,70,400,0" Click="WashButton_Click" />
        <Button Name="BrushEveButton" Content="Did you brush your teeth this evening?" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,95,191,0" Click="BrushEveButton_Click" />
        <Button Name="FlossButton" Content="Did you floss between your teeth today?" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,120,10,0" Click="FlossButton_Click" />
        <TextBlock Name="BrushStatus" Text="Not Brushed" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,372,0,0" FontSize="16" />

        <!-- Source: https://beverlyhillsortho.com/underbite-before-and-after-bho/ -->
        <Image x:Name="TeethImage" Source="pack://application:,,,/Brush_Teeth/teeth.jpg" HorizontalAlignment="Left" VerticalAlignment="Top" Opacity="1" Stretch="Uniform" Visibility="Visible" />
        <Image x:Name="Yellowed" Source="pack://application:,,,/Brush_Teeth/yellowed.jpg" HorizontalAlignment="Left" VerticalAlignment="Top" Opacity="0.6" Panel.ZIndex="1" Stretch="Uniform" Visibility="Visible" />
        <TextBlock Name="StreakStatus" Text="Nada" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,389,0,0" FontSize="16" />

        <Button Name="LoginButton" Content="Login" HorizontalAlignment="Center" VerticalAlignment="Center" Click="LoginButton_Click" Visibility="Collapsed" />

    </Grid>
</Window>
