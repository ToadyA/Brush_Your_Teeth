<Window x:Class="Brush_Teeth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Brush_Teeth"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="LightGray">
        <Calendar Name="BrushCalendar" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" />
        <TextBlock Name="Today" Text ="A fine day" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,397,0,0" FontSize="16" Width="232" />

        <Button Name="BrushMornButton" Content="Did you brush your teeth this morning?" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,35,10,0" Click="BrushMornButton_Click" />
        <Button Name="WashButton" Content="Did you use mouthwash today?" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,60,10,0" Click="WashButton_Click" />
        <Button Name="BrushEveButton" Content="Did you brush your teeth this evening?" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,85,10,0" Click="BrushEveButton_Click" />
        <Button Name="FlossButton" Content="Did you floss between your teeth today?" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,110,10,0" Click="FlossButton_Click" />
        <TextBlock Name="BrushStatus" Text="Not Brushed" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,196,0,0" FontSize="16" />

        <Image x:Name="TeethImage" Source="pictures/teeth.png" HorizontalAlignment="Left" VerticalAlignment="Top" Opacity="1" Stretch="Uniform" /> <!-- Source: https://beverlyhillsortho.com/underbite-before-and-after-bho/ -->
        <Image x:Name="Yellowed" Source="pictures/yellowed.png" HorizontalAlignment="Left" VerticalAlignment="Top" Opacity="0.6" Panel.ZIndex="1" Stretch="Uniform" />
        <TextBlock Name="StreakStatus" Text="Nada" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,256,0,0" FontSize="16" />
    </Grid>
</Window>
