<Window x:Class="Brush_Teeth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Brush_Teeth"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Calendar Name="BrushCalendar" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" />
        <TextBlock Name="Today" Text ="A fine day" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,397,0,0" FontSize="16" Width="232" />
        <Button Name="BrushButton" Content="Did you brush your teeth today?" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,35,10,0" Click="BrushButton_Click" />
        <TextBlock Name="BrushStatus" Text="Not Brushed" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="666,196,0,0" FontSize="16" Width="90" />
    </Grid>
</Window>
